{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="brown lighten-5">
    <div class="block_a center" style="background:#26a69a; color:white;">
        <b><h1>Contact</h1></b>
    </div>
    <div class="container">
        <div class="row">
                {{ form_start(form)}}
                {% if services %}
                <div class="form-group">
                    <label for="service">Choix du service</label>
                    <select class="form-control" id="service" name="service">
                    {% for service in services %}
                        <option value="{{service.email}}" >{{service.name|upper}}</option>
                    {% endfor %}
                    </select>
                </div>
                {% endif %}
                <div class="col s12 m6 input-field">
                    <label for="contact_lastname">Nom</label>
                    {{ form_widget(form.lastname)}}
                </div>
                <div class="col s12 m6 input-field">
                    <label for="contact_firstname">Pr√©nom</label>
                    {{ form_widget(form.firstname)}}
                </div>
                 <div class="col s12 m6 input-field">
                    <label for="contact_email">Email</label>
                    {{ form_widget(form.email)}}
                </div>
                  <div class="col s12 m6 input-field">
                    <label for="contact_email">Message</label>
                    {{ form_widget(form.message)}}
                </div>
            </div>
                {{ form_end(form)}}
        </div>
    </div>
</div>

{% endblock %}
